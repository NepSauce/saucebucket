<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SauceBucket.ViewModels.Widgets"
             xmlns:models="clr-namespace:SauceBucket.Models"
             x:Class="SauceBucket.LeftSideBar"
             x:DataType="vm:LeftSideBarViewModel">

    <Border Background="#FFF7E3" Padding="0" Width="220">
        <StackPanel>
            <!-- Modern logo and title in one line -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,15,0,0" Spacing="4">
                <Border Background="#ffc341" CornerRadius="8" Padding="8,8" VerticalAlignment="Center">
                    <TextBlock Text="SaBu"
                               Foreground="#FFF7E3"
                               FontWeight="Bold"
                               FontSize="16"
                               FontFamily="Inter, Segoe UI, Arial"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="SauceBucket"
                           Foreground="#222"
                           FontWeight="Bold"
                           FontSize="20"
                           FontFamily="Inter, Segoe UI, Arial"
                           VerticalAlignment="Center"
                           LetterSpacing="0.5"
                           Margin="0,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Quick Access" Foreground="#222" Margin="0,15,0,20" FontWeight="Bold" FontSize="24" FontFamily="Inter, Segoe UI, Arial" HorizontalAlignment="Left" Padding="10,0,0,0"/>

            <!-- Placeholder items only -->
            <StackPanel Orientation="Vertical" Spacing="12" Margin="0,0,0,0">
                <Button Content="Placeholder 1"
                        Background="#FFE0B2"
                        Foreground="#222"
                        FontSize="18"
                        FontWeight="SemiBold"
                        FontFamily="Inter, Segoe UI, Arial"
                        BorderBrush="#FF8C4A"
                        BorderThickness="1"
                        Padding="10,6"
                        Margin="0,0,0,0">
                    <Button.Styles>
                        <Style Selector="Button:hover">
                            <Setter Property="Background" Value="#FFF3D1"/>
                            <Setter Property="Foreground" Value="#222"/>
                        </Style>
                    </Button.Styles>
                </Button>
                <Button Content="Placeholder 2"
                        Background="#FFE0B2"
                        Foreground="#222"
                        FontSize="18"
                        FontWeight="SemiBold"
                        FontFamily="Inter, Segoe UI, Arial"
                        BorderBrush="#FF8C4A"
                        BorderThickness="1"
                        Padding="10,6"
                        Margin="0,0,0,0">
                    <Button.Styles>
                        <Style Selector="Button:hover">
                            <Setter Property="Background" Value="#FFF3D1"/>
                            <Setter Property="Foreground" Value="#222"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
