<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SauceBucket.ViewModels.Widgets"
             xmlns:models="clr-namespace:SauceBucket.Models"
             x:Class="SauceBucket.LeftSideBar"
             x:DataType="vm:LeftSideBarViewModel">

    <Border Background="#FFF7E3" Padding="12" Width="220">
        <StackPanel>
            <TextBlock Text="Quick Access" Foreground="#FF8C4A" Margin="0,0,0,20" FontWeight="Bold" FontSize="22"/>

            <!-- Placeholder items only -->
            <StackPanel Orientation="Vertical" Spacing="12" Margin="0,0,0,0">
                <Button Content="Placeholder 1"
                        Background="#FFE0B2"
                        Foreground="#FF8C4A"
                        FontSize="17"
                        FontWeight="SemiBold"
                        BorderBrush="#FF8C4A"
                        BorderThickness="1"
                        Padding="10,6"
                        Margin="0,0,0,0">
                    <Button.Styles>
                        <Style Selector="Button:hover">
                            <Setter Property="Background" Value="#FFF3D1"/>
                            <Setter Property="Foreground" Value="#FF8C4A"/>
                        </Style>
                    </Button.Styles>
                </Button>
                <Button Content="Placeholder 2"
                        Background="#FFE0B2"
                        Foreground="#FF8C4A"
                        FontSize="17"
                        FontWeight="SemiBold"
                        BorderBrush="#FF8C4A"
                        BorderThickness="1"
                        Padding="10,6"
                        Margin="0,0,0,0">
                    <Button.Styles>
                        <Style Selector="Button:hover">
                            <Setter Property="Background" Value="#FFF3D1"/>
                            <Setter Property="Foreground" Value="#FF8C4A"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
