<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SauceBucket.ViewModels.Widgets"
             xmlns:models="clr-namespace:SauceBucket.Models"
             x:Class="SauceBucket.LeftSideBar"
             x:DataType="vm:LeftSideBarViewModel">

    <Border Background="#ffffff" Padding="0" Width="220">
        <StackPanel Spacing="0">
            <!-- Modern logo and app title -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,24,0,0" Spacing="8">
                <Border Background="#ffc341" CornerRadius="12" Padding="10,10" VerticalAlignment="Center">
                    <TextBlock Text="SaBu"
                               Foreground="#ffffff"
                               FontWeight="Bold"
                               FontSize="18"
                               FontFamily="Instrument Sans, Segoe UI, Arial"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="SauceBucket"
                           Foreground="#222"
                           FontWeight="Bold"
                           FontSize="18"
                           FontFamily="Inter, Segoe UI, Arial"
                           VerticalAlignment="Center"
                           LetterSpacing="0.7"
                           Margin="0,0,0,0"/>
            </StackPanel>

            <!-- Divider -->
            <Border Height="1" Background="#E0E0E0" Margin="14,18,16,5"/>

            <TextBlock Text="Quick Access" Foreground="#222" Margin="14,18,0,8" FontWeight="Bold" FontSize="16" FontFamily="Inter, Segoe UI, Arial" HorizontalAlignment="Left"/>

            <!-- Modernized placeholder buttons -->
            <StackPanel Orientation="Vertical" Spacing="10" Margin="0,0,0,0">
                <Button Content="Placeholder 1"
                        Background="#F5F5F7"
                        Foreground="#222"
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="Inter, Segoe UI, Arial"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        Padding="14,8"
                        Margin="16,0,16,0"
                        HorizontalAlignment="Left"
                        Width="188"
                        CornerRadius="8">
                    <Button.Styles>
                        <Style Selector="Button:hover">
                            <Setter Property="Background" Value="#E9E9EC"/>
                            <Setter Property="BorderBrush" Value="#BDBDBD"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#E0E0E0"/>
                        </Style>
                    </Button.Styles>
                </Button>
                <Button Content="Placeholder 2"
                        Background="#F5F5F7"
                        Foreground="#222"
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="Inter, Segoe UI, Arial"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        Padding="14,8"
                        Margin="16,0,16,0"
                        HorizontalAlignment="Left"
                        Width="188"
                        CornerRadius="8">
                    <Button.Styles>
                        <Style Selector="Button:hover">
                            <Setter Property="Background" Value="#E9E9EC"/>
                            <Setter Property="BorderBrush" Value="#BDBDBD"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#E0E0E0"/>
                        </Style>
                    </Button.Styles>
                </Button>
                <Button Content="Placeholder 3"
                        Background="#F5F5F7"
                        Foreground="#222"
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="Inter, Segoe UI, Arial"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        Padding="14,8"
                        Margin="16,0,16,0"
                        HorizontalAlignment="Left"
                        Width="188"
                        CornerRadius="8">
                    <Button.Styles>
                        <Style Selector="Button:hover">
                            <Setter Property="Background" Value="#E9E9EC"/>
                            <Setter Property="BorderBrush" Value="#BDBDBD"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#E0E0E0"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
